@model Dish

<h1> Edit Dish</h1>

<div class="container"></div>
        <form asp-action="UpdateDish" asp-controller="Dishes" asp-route-DishId= "@Model.DishId"  method="POST">
            <div>
                <label asp-for="Name"></label>
                <span asp-validation-for ="Name" class="text-danger font-weight-bold"></span>
                <input  class="form-control"  asp-for="Name" value="@Model.Name" ><br><br>
            </div>

            <div>
                <label asp-for="Chef"></label>
                <span asp-validation-for ="Chef" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Chef" value="@Model.Chef"><br><br>
            </div>

            <div>
                <label asp-for="Calories"></label>
                <span asp-validation-for ="Calories" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Calories" value="@Model.Calories" ><br><br>
            </div>

            <div>
                <label for="Tastiness"></label>
                <span asp-validation-for ="Tastiness" >Tastiness</span>
                <select name="Tastiness" >
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select><br><br>
            </div>

            <div>
                <label asp-for="Description"></label>
                <span asp-validation-for ="Description"></span>
                <input class="form-control" asp-for="Description" value="@Model.Description"><br><br>
            </div>


            @* <input type="submit" value="Update Dish!"> *@
            <a asp-controller ="Dishes"
            asp-action="Details"
            asp-route-dishId = "@Model.DishId"><button>Update Dish</button></a>

        </form>
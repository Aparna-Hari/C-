@model Product


<div style="text-align: center;">
            <h1>Products | <a asp-controller="Category" asp-action="Categories">Categories</a></h1>
        </div>

        <div style="display: flex; align-items: center;">
            <div style="flex: 1;">
                <h1>New Product</h1>
                <form asp-controller="Product" asp-action="NewProduct" method="POST">
                    <div>
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name"></span>
                        <input asp-for="Name"><br><br>
                    </div>

                    <div>
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description"></span>
                        <textarea asp-for="Description" cols="40" rows="5"></textarea><br><br>
                    </div>

                    <div>
                        <label asp-for="Price"></label>
                        <span asp-validation-for="Price"></span>
                        <input asp-for="Price" /><br><br>
                    </div>

                    <button type="submit">Create</button>
                </form>
                <hr style="border-block-color: ;">
                <div>
                    <h1>Existing Products :</h1>
                    @foreach (Product prod in ViewBag.Products)
                    {
                        <h3><a asp-controller="Product" asp-action="CatOfProd" asp-route-productId="@prod.ProductId">@prod.Name</a></h3>
                    }
                </div>
            </div>